.camera,
.image {
  width: 100%;
  height: 400px;
}
.operate-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin-top: 50rpx;
}
.operate-container .btn {
  width: 40%;
  margin: 0;
}
.operate-container .btn:first-child {
  margin-right: 30rpx;
}
.notice-container {
  padding: 40rpx 60rpx;
}
.notice-container .notice {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}
.notice-container .desc {
  display: block;
  font-size: 32rpx;
  color: #999;
  line-height: 1.6;
}

